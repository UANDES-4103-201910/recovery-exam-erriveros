<h1>Cards#show</h1>
<p>Find me in app/views/cards/show.html.erb</p>

<% @order_items.each do |item| %>
  <h3><%= item.pizza.recipe.name %></h3>
  <h5><%= item.pizza.recipe.price + item.pizza.crust.price %></h5>


  <%= form_for item do |f| %>
    <%= f.hidden_field :pizza_id, :value => item.pizza.id %>
    <%= f.number_field :quantity, :value => item.quantity %>
    <%= f.submit "Update Card" %>
  <% end %>
  <h2>Subtotal: <%= item.total %></h2>
<% end %>