<%= stylesheet_link_tag "application" %>

<p id="notice"><%= notice %></p>

<h1>Pizzas</h1>

<table>
  <thead>
  <tr>
    <th>Crust</th>
    <th>Recipe</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="menu-container">
  <% @pizzas.each do |pizza| %>
      <div class="menu">

          <div class="coo"><%= pizza.crust.name %></div>
          <div><%= pizza.recipe.name %></div>
          <div><%= link_to 'Show', pizza %></div>
          <div>
            <%= form_for @order_item do |f| %>
              <%=f.hidden_field :pizza_id, :value => pizza.id %>
              <%=f.number_field :quantity, :value => 1, :min => 1%>
              <%=f.submit "Add to Card" %>

            <% end %>
          </div>
      </div>

  <% end %>
  </div>
  </tbody>
</table>

<br>
