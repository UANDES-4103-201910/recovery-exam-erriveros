<p id="notice"><%= notice %></p>

<h1>Pizzas</h1>

<table>
  <thead>
  <tr>
    <th>Crust</th>
    <th>Recipe</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pizzas.each do |pizza| %>
    <tr>
      <td><%= pizza.crust.name %></td>
      <td><%= pizza.recipe.name %></td>
      <td><%= link_to 'Show', pizza %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
