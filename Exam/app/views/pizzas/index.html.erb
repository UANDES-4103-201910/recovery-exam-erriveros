<p id="notice"><%= notice %></p>

<h1>Pizzas</h1>

<table>
  <thead>
  <tr>
    <th>Crust</th>
    <th>Recipe</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pizzas.each do |pizza| %>
    <tr>
      <td><%= pizza.crust.name %></td>
      <td><%= pizza.recipe.name %></td>
      <td><%= link_to 'Show', pizza %></td>
      <td>
        <%= form_for @order_item do |f| %>
          <%=f.hidden_field :pizza_id, :value => pizza.id %>
          <%=f.number_field :quantity, :value => 1, :min => 1%>
          <%=f.submit "Add to Card" %>

        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
